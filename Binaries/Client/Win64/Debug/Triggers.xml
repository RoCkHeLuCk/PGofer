    <Script Type="string">//Variavel para colcar seriais.
var global Serial;

//Desligar
function global Off ( ); 
begin
    System.ShutDown( 1 );
end;

//Reiniciar
function global Reset ( );
begin
    System.ShutDown( 2 );
end;

//StandBy
function global StandBy ( );
begin
    System.ConsoleMsg := False ;
    System.SetSuspendState( False );
end;

//Executa o script de serviços  para configurar o pc
function global InstallServices ( ); 
begin 
    File.Script( System.DirCurrent + 'Scripts\Services.pas' ,0 ,0 );
end;

//Executa o script de registros para configurar o pc
function global InstallRegister ( ); 
begin 
    File.Script( System.DirCurrent + 'Scripts\Registros.pas' ,0 ,0);
end;

//Executa o script dedetar pastas, para limpar o pc de lixo
function global InstallDeleteFolders ( );
begin 
    File.Script( System.DirCurrent + 'Scripts\DeletePastas.pas' ,0 ,0);
end;

//Desabilita a Hibernação.
function global InstallHibernate ( ); 
begin 
    File.Exec( 'POWERCFG' , '-H OFF' , '' , flxNormal );
end;
</Script>
